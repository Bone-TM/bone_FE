<!DOCTYPE html>
<html>
  <head>
    <title>BoneFront</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ml-auto">
              <%= link_to "Home", root_path, method: :get, class: "nav-item nav-link" %>
            </div>
            <div class="navbar-nav ms-auto">
                <%= link_to "Logout", logout_path, method: :delete, class: "nav-item nav-link"  %>
                <%= link_to "Login", '/auth/google_oauth2', method: :post, class: "nav-item nav-link"  %>
            </div>
        </div>
    </div>
</nav>

    <%= yield %>
  </body>
</html>
