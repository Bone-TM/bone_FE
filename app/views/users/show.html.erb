<center>
<h1><%= @user.name %>'s Dashboard</h1>

<%= button_to "Add Dog to Profile", users_pets_new_path, method: :get %>
<%= button_to "Update User Info", users_edit_path, method: :get %>
<%= button_to "Find Single Dogs", pets_path, method: :get %>


<h4>Registered Pets:</h4>
<% @user.pets.each do |pet|%>
<h5> <%= pet.name %> </h5>
<%@picture = DogPictureFacade.create_breed_image(pet.breed)%>
<%= image_tag(@picture)%>
<p> <b> <%= link_to "View Details", "/pets/#{pet.id}", method: :get %> </b> </p>
<% end %>
<center>
